<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".IndexActivity"
    android:clickable="false"
    android:orientation="vertical"
    android:background="#ffff9126">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="25dp"
        android:textStyle="bold"

        android:id="@+id/bienvennue_text"
        android:inputType="text"
        android:gravity="center" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:id="@+id/icon_agenda"
            android:gravity="center"
            android:background="@mipmap/icone_annuaire"
            android:layout_row="4"
            android:layout_column="10"
            android:layout_alignBottom="@+id/agenda_access"
            android:layout_toStartOf="@+id/agenda_access" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:id="@+id/icon_profil"
            android:gravity="center"
            android:background="@mipmap/icon_profil"
            android:layout_column="10"
            android:layout_alignBottom="@+id/profil_access"
            android:layout_toStartOf="@+id/profil_access" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:id="@+id/icon_exit"
            android:gravity="center"
            android:background="@mipmap/icon_exit"
            android:layout_column="10"
            android:layout_alignBottom="@+id/quitter"
            android:layout_toStartOf="@+id/quitter" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/agenda_access"
        android:text="Annuaire"
        android:textSize="25dp"
        android:gravity="center"
        android:textStyle="bold"
            android:layout_marginBottom="80dp"
            android:layout_above="@+id/quitter"
            android:layout_centerHorizontal="true" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quitter"
        android:text="Quitter"
        android:textSize="25dp"
        android:gravity="center"
        android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/icon_profil"
            android:layout_alignEnd="@+id/agenda_access" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profil_access"
        android:text="Profil"
        android:textSize="25dp"
        android:gravity="center"
        android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>
